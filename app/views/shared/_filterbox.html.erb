<div class="filterbox">
  <div class="location-artist filters">
    <%= form_tag gigs_path, method: :get do %>
        <%= text_field_tag :city,
        params[:city],
        class: "search-input-field first-input city-filter",
        autocomplete: "off",
        placeholder: "City" %>

        <%= text_field_tag :artist_name,
        params[:artist_name],
        class: "search-input-field last-input artist-filter",
        autocomplete: "off",
        placeholder: "Artist" %>
        <%# raise %>

        <%= button_tag(type: "submit", class: "btn-search-form") do %>
          <%= image_tag("f-button.png")%>
        <% end %>
    <% end %>
  </div>

  <div class="calendar filters">
    <%= simple_form_for :search, method: "get" do |f| %>
      <div class="flatpickr-input-container">
        <%= f.input :starts_at, label: false, as: :string, required: false, input_html: {class: "start-filter", id: "range_start", placeholder: "Start date"} %>
        <%= f.input :ends_at, label: false, as: :string, required: false, input_html: {class: "end-filter", id: "range_end", placeholder: "End date"} %>
        <%= button_tag(type: "submit-calendar", class: "btn-search-form") do %>
          <%= image_tag("f-button.png")%>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="reset-filters filters">
    <%= link_to "Reset", gigs_path, id:"filters-reset" %>
  </div>

</div>
