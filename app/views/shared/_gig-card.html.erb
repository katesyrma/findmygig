  <% if @playlist_gigs.count == 0 %>
  <p>Sorry, there are no scheduled gigs</p>
  <% else %>
  <% @playlist_gigs.each do |gig| %>
  <div data-controller='remote'
  data-target='remote.wrapper'
  data-action='keydown@window->remote#closeWithKeyboard'
  data-remote-url='<%= gig_path(gig, inline: true) %>'>
  <%= link_to gig_path(gig), "data-action": 'click->remote#view' do %>
  <div class="gig_card">

    <%= image_tag gig.image_url %>
    <div class="gig_card-infos">
      <h4><strong><%= gig.artist_name %></strong></h4>
      <h5><%= gig.city %></h5>
      <h6><%= gig.date %></h6>
      <p><%= gig.venue %></p>
    </div>
  </div>
  <% end %>
</div>
<% end %>
<% end %>
