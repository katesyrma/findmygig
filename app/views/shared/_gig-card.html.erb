<div class="wrapper">
  <% if @playlist_gigs.count == 0 %>
    <p>Sorry, there are no scheduled gigs</p>
  <% else %>
    <% @playlist_gigs.each do |gig| %>
      <div class="gig_card">
        <img src="https://source.unsplash.com/random/200x100" alt="">
        <div class="gig_card-infos">
            <h4><strong><%= link_to gig.artist_name, gig_path(gig) %></strong></h4>
            <h5><%= gig.city %></h5>
            <h6><%= gig.date %></h6>
            <p><%= gig.venue %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
